CC := gcc
SRC := main.c school.c
OBJ := $(SRC:.c=.o)
NAME := school
CFLAGS := -Wall -Werror -Wextra -pedantic
RM := rm -f

.PHONY: all clean oclean fclean re

all: m.h $(NAME)

$(NAME): $(OBJ)
    $(CC) $(OBJ) -o $@

%.o: %.c
    $(CC) $(CFLAGS) -c $< -o $@

m.h:
    @echo "Error: m.h header file is missing."
    @exit 1

clean:
    $(RM) $(OBJ) *~

oclean: clean

fclean: oclean
    $(RM) $(NAME)

re: fclean all

